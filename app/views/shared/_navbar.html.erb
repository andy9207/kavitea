<header data-controller="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" data-navbar-target="header">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold text-white hover:text-white/90 transition-colors">
          Kavitea
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="#home" class="text-white/90 hover:text-white font-medium transition-colors">
          Inicio
        </a>
        <a href="#about" class="text-white/90 hover:text-white font-medium transition-colors">
          Quienes Somos
        </a>
        <a href="#products" class="text-white/90 hover:text-white font-medium transition-colors">
          Productos
        </a>
        <a href="#contact" class="bg-white text-kavitea-green px-6 py-2.5 rounded-full font-semibold hover:bg-kavitea-green hover:text-white transition-all duration-300">
          Contacto
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button data-action="click->navbar#toggle" class="md:hidden text-white p-2" aria-label="Menu">
        <svg data-navbar-target="menuIcon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg data-navbar-target="closeIcon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div data-navbar-target="mobileMenu" class="md:hidden hidden bg-kavitea-blue/95 backdrop-blur-sm">
    <div class="px-4 py-4 space-y-3">
      <a href="#home" data-action="click->navbar#close" class="block text-white/90 hover:text-white font-medium py-2 transition-colors">
        Inicio
      </a>
      <a href="#about" data-action="click->navbar#close" class="block text-white/90 hover:text-white font-medium py-2 transition-colors">
        Quienes Somos
      </a>
      <a href="#products" data-action="click->navbar#close" class="block text-white/90 hover:text-white font-medium py-2 transition-colors">
        Productos
      </a>
      <a href="#contact" data-action="click->navbar#close" class="block bg-white text-kavitea-green px-6 py-3 rounded-full font-semibold text-center hover:bg-kavitea-green hover:text-white transition-all duration-300 mt-4">
        Contacto
      </a>
    </div>
  </div>
</header>
